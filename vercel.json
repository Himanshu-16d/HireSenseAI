{
  "version": 2,
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "env": {
    "NEXT_PUBLIC_APP_URL": "${VERCEL_URL}"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_URL": "${VERCEL_URL}",
      "PRISMA_GENERATE": "true"
    }
  },
  "functions": {
    "api/**/*.ts": {
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/spline/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    }
  ]
}
} 